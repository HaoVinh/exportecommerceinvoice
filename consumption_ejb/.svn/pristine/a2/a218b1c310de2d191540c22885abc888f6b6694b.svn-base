	public int luuChiTietHoaDonTam(List<InvoiceDetailTempDTO> invoiceDetailTempDTOs, StringBuilder errors)
			throws IllegalStateException, SystemException, SQLException {
		int res = -1;
		Connection con = null;
		Date now = MyUtilEJB.loaibogio(new Date());
		List<Long> listIdResult = new ArrayList<>();

		try {
			// Kiểm tra dữ liệu đầu vào
			if (invoiceDetailTempDTOs == null) {
				errors.append("Dữ liệu đầu vào không hợp lệ!");
				return res;
			}

			// Bắt đầu giao dịch
			ut.begin();
			con = datasource.getConnection();
			con.setTransactionIsolation(Connection.TRANSACTION_REPEATABLE_READ);

			for (InvoiceDetailTempDTO dto : invoiceDetailTempDTOs) {
				// Kiểm tra productCode
				Product pd = productService.selectByCode(dto.getProductCode());
				if (pd == null) {
					errors.append("Không tìm thấy mã sản phẩm: " + dto.getProductCode() + "; ");
					ut.rollback();
					return res;
				}

				// Tìm bản ghi hiện có
				InvoiceDetailTemp detailTemp = null;
				if (dto.getInvoiceDetailId() != null) {
					detailTemp = em.find(InvoiceDetailTemp.class, dto.getInvoiceDetailId());
				}
				InvoiceTemp invoiceTemp = null;
				if(dto.getInvoiceTempId() != null) {
					invoiceTemp = em.find(InvoiceTemp.class, dto.getInvoiceTempId());
				}
				// Cập nhật thông tin
				detailTemp.setProduct(pd);
				detailTemp.setProductdh_code(dto.getProductDHCode());
				detailTemp.setQuantity(dto.getQuantity());
				detailTemp.setReal_quantity_box(dto.getRealQuantity() != 0 ? dto.getRealQuantity() : 0);
				detailTemp.setReal_quantity(dto.getRealQuantityDVT() != 0 ? dto.getRealQuantityDVT() : 0);
				detailTemp.setUnit_price(dto.getUnit_price() != 0 ? dto.getUnit_price() : 0);
				detailTemp.setTotal(MyMath.roundCustom((dto.getRealQuantityDVT() != 0 ? dto.getRealQuantityDVT() : 0)
						* (dto.getUnit_price() != 0 ? dto.getUnit_price() : 0), 0));
				invoiceTemp.setSaved(true);
				
				// Lưu hoặc cập nhật
				if (detailTemp.getQuantity() != 0) {

					if (detailTemp.getId() == 0) {
						em.persist(detailTemp);
					} else {
						em.merge(detailTemp);
					}
					if (detailTemp.getId() == 0) {
						errors.append("Lưu/cập nhật chi tiết hóa đơn tạm thất bại cho invoiceDetailId: "
								+ dto.getInvoiceDetailId() + "; ");
						ut.rollback();
						return res;
					}
					listIdResult.add(detailTemp.getId());
				}
			}

			// Commit giao dịch
			ut.commit();
			res = 0;

		} catch (Exception e) {
			res = -1;
			errors.append("ProcessLogicInvoicePosService.luuChiTietHoaDonTam: " + e.getMessage());
			logger.error("ProcessLogicInvoicePosService.luuChiTietHoaDonTam: " + e.getMessage(), e);
			try {
				ut.rollback();
			} catch (SystemException ex) {
				errors.append("Lỗi khi rollback: " + ex.getMessage());
			}
		} finally {
			if (con != null) {
				try {
					con.close();
				} catch (SQLException e) {
					errors.append("Lỗi khi đóng kết nối cơ sở dữ liệu: " + e.getMessage());
				}
			}
		}
		return res;
	}

