	public int taoHoaDonAPI(InvoiceAsyncDTO invoiceAsyncDTO, StringBuilder errors, boolean kiemton) {
		InvoiceDTO invoiceDTO = invoiceAsyncDTO.getInvoiceDTO();
		List<InvoiceDetailDTO> invoiceDetailDTOs = invoiceDTO.getInvoiceDetailDTOs();
		int res = 1;
		Connection con = null;
		try {
			con = datasource.getConnection();
			con.setTransactionIsolation(Connection.TRANSACTION_REPEATABLE_READ);
			ut.begin();
			Date now = MyUtilEJB.loaibogio(new Date());
			// tạo hóa đơn thứ nhất
			Invoice invoice = new Invoice();
			invoice.setCreated_date(new Date());
			Customer cus = customerService.selectByCode(invoiceDTO.getMakhachhang());
			invoice.setCustomer(cus);
			invoice.setInvoice_date(now);
			invoice.setDelivery_date(now);
			// Chuyen khoan
			PaymentMethod payment = paymentMethodService.selectByCode("CK");
			invoice.setPayment_method(payment);
			Car car = carService.selectByCode(invoiceDTO.getSoxe());
			invoice.setCar(car);
			DeliveryPricing deliv = deliveryPricingService.selectByPlaceCode(invoiceDTO.getManoiden());
			invoice.setDelivery_pricing(deliv);
			// Xuat noi bo
			IECategories iecate = ieCategoriesService.selectByCode("Y");
			invoice.setIe_categories(iecate);
			// Kho san pham
			Warehouse warehouse = warehouseService.selectByCode("F");
			invoice.setWarehouse(warehouse);
			invoice.setTax_value(GiaTriMacDinh.HESOTHUE);// Cai dat mac dinh 10%
			if (!"".equals(invoiceDTO.getMathukho()))
				invoice.setStocker(stockerService.selectByCode(invoiceDTO.getMathukho()));

			/*
			 * Chuong trinh don gia, khuyen mai
			 */
			JsonObject json = new JsonObject();
			json.addProperty("date", ToolTimeCustomer.convertDateToString(invoice.getInvoice_date(), "dd/MM/yyyy"));
			json.addProperty("customer_id", invoice.getCustomer().getId());
			CustomerPricingProgramReqInfo t = new CustomerPricingProgramReqInfo();
			customerPricingProgramService.selectForCustomer(JsonParserUtil.getGson().toJson(json), t);
			PricingProgram pricingProgramTrans = t.getCustomer_pricing_program() == null ? null
					: t.getCustomer_pricing_program().getPricing_program();
			CustomerPromotionProgramReqInfo t1 = new CustomerPromotionProgramReqInfo();
			customerPromotionProgramService.selectForCustomer(JsonParserUtil.getGson().toJson(json), t1);
			PromotionProgram promotionProgramTrans = t1.getCustomer_promotion_program() == null ? null
					: t1.getCustomer_promotion_program().getPromotion_program();

			invoice.setPricing_program(pricingProgramTrans);
			invoice.setPromotion_program(promotionProgramTrans);

			/*
			 * Cai dat don gia cho chi tiet
			 */
			for (int i = 0; i < invoiceDetailDTOs.size(); i++) {
				Product pd = productService.selectByCode(invoiceDetailDTOs.get(i).getProductCode());
				if (pd != null) {
					invoiceDetailDTOs.get(i).setProduct(pd);
					invoiceDetailDTOs.get(i)
							.setDongia(caidatdongia(pricingProgramTrans, invoice.getInvoice_date(), pd.getId()));
					invoiceDetailDTOs.get(i).setThanhtien(MyMath.roundCustom(
							invoiceDetailDTOs.get(i).getQuantity() * invoiceDetailDTOs.get(i).getDongia(), 0));
				} else {
					errors.append("Không tìm thấy mã sản phẩm: " + invoiceDetailDTOs.get(i).getProductCode());
					res = -1;
					ut.rollback();
					return res;
				}
			}

			invoice.setPo_no(invoiceDTO.getPo());
			invoice.setExported(true);
			initCodeVoucher(invoice);

			double totalevent = invoiceDetailDTOs.stream().mapToDouble(f -> f.getThanhtien()).sum();
			invoice.setTongtien(MyMath.round(totalevent));
			invoice.setThue(MyMath.round(totalevent * invoice.getTax_value()));

			em.persist(invoice);
			if (invoice.getId() == 0) {
				res = -1;
				ut.rollback();
				errors.append("Tạo hóa đơn thất bại!");
				return res;
			}
			// tạo chi tiết cho đơn hàng thứ nhất
			for (InvoiceDetailDTO p : invoiceDetailDTOs) {
				InvoiceDetail detail = new InvoiceDetail();
				detail.setInvoice(invoice);
				detail.setCreated_date(new Date());
				detail.setProduct(p.getProduct());
				detail.setQuantity(p.getQuantity());
				detail.setReal_quantity(detail.getQuantity());
				detail.setUnit_price(p.getDongia());
				detail.setTotal(MyMath.round(detail.getQuantity() * detail.getUnit_price()));
				detail.setNote_batch_code(p.getNote_batch_code());
				boolean dutonkho = true;
				double tonkho = 0;
				if (kiemton) {
					tonkho = tonKhoThucTeService.kiemton(detail.getProduct().getId());
					if (tonkho < detail.getQuantity()) {
						dutonkho = false;
					}
				}
				if (dutonkho) {
					if (detail.getQuantity() != 0) {
						em.persist(detail);
						if (detail.getId() == 0) {
							res = -1;
							errors.append("Tạo chi tiết hóa đơn thất bại!");
							ut.rollback();
							return res;
						}
					}
				} else {
					errors.append("Mã SP: " + detail.getProduct().getProduct_code() + " không đủ tồn kho ("
							+ MyUtilEJB.dinhdangso(tonkho / detail.getProduct().getSpecification()) + " thùng)");
					res = -1;
					ut.rollback();
					return res;
				}

			}
			ut.commit();
		} catch (Exception e) {
			e.printStackTrace();
		} finally {
			if (con != null) {
				try {
					con.close();
				} catch (SQLException e) {
					e.printStackTrace();
				}
			}
		}
		return res;
	}

	private IECategories selectIECategoriesByCode(String code) {
		try {
			CriteriaBuilder cb = em.getCriteriaBuilder();
			CriteriaQuery<IECategories> cq = cb.createQuery(IECategories.class);
			Root<IECategories> root = cq.from(IECategories.class);
			cq.select(root).where(cb.equal(root.get("code"), code));
			TypedQuery<IECategories> query = em.createQuery(cq);
			List<IECategories> list = query.getResultList();
			if (list.size() > 0) {
				return list.get(0);
			}
		} catch (Exception e) {
			logger.error("ProcessLogicInvoiceService.selectBindIECategories:" + e.getMessage(), e);
		}
		return null;
	}

	public int taoHoaDonTempAPI(InvoiceTempAsyncDTO invoiceTempAsyncDTO, StringBuilder errors)
			throws IllegalStateException, SystemException, SQLException {
		int res = -1;
		Connection con = null;
		Date now = MyUtilEJB.loaibogio(new Date());
		List<Long> listIdResult = new ArrayList<>();

		try {
			// Kiểm tra dữ liệu đầu vào
			if (invoiceTempAsyncDTO == null || invoiceTempAsyncDTO.getInvoiceTempDTO() == null
					|| invoiceTempAsyncDTO.getInvoiceTempDTO().getInvoiceDetailTemps() == null) {
				errors.append("Dữ liệu đầu vào không hợp lệ!");
				return res;
			}

			InvoiceTempDTO invoiceTempDTO = invoiceTempAsyncDTO.getInvoiceTempDTO();
			List<InvoiceDetailTempDTO> invoiceDetailTemps = invoiceTempDTO.getInvoiceDetailTemps();

			// Bắt đầu giao dịch
			ut.begin();
			con = datasource.getConnection();
			con.setTransactionIsolation(Connection.TRANSACTION_REPEATABLE_READ);

			// Truy vấn OrderLix
			CriteriaBuilder cb = em.getCriteriaBuilder();
			long orderId = invoiceTempDTO.getOrderId();
			CriteriaQuery<OrderLix> cqOrderLix = cb.createQuery(OrderLix.class);
			Root<OrderLix> rootOrder = cqOrderLix.from(OrderLix.class);
			rootOrder.fetch("customer", JoinType.INNER);
			rootOrder.fetch("promotion_program", JoinType.LEFT);
			rootOrder.fetch("pricing_program", JoinType.LEFT);
			rootOrder.fetch("payment_method", JoinType.LEFT);
			rootOrder.fetch("car", JoinType.LEFT);
			rootOrder.fetch("warehouse", JoinType.LEFT);
			rootOrder.fetch("ie_categories", JoinType.LEFT);
			rootOrder.fetch("delivery_pricing", JoinType.LEFT);
			rootOrder.fetch("freight_contract", JoinType.LEFT);
			cqOrderLix.select(rootOrder).where(cb.equal(rootOrder.get("id"), orderId));
			TypedQuery<OrderLix> queryOrder = em.createQuery(cqOrderLix);
			List<OrderLix> listOrderTrans = queryOrder.getResultList();
			if (listOrderTrans.isEmpty()) {
				res = -1;
				errors.append("Đơn hàng không tồn tại!");
				ut.rollback();
				return res;
			}
			OrderLix orderLixTrans = listOrderTrans.get(0);

			Customer cus = orderLixTrans.getCustomer();
			Warehouse wh = orderLixTrans.getWarehouse();
			PricingProgram pricingProgram = orderLixTrans.getPricing_program();
			PromotionProgram promotionProgram = orderLixTrans.getPromotion_program();

			// Kiểm tra khách hàng và kho
			if (cus == null) {
				errors.append("Không tìm thấy khách hàng trong đơn hàng ID: " + orderId);
				ut.rollback();
				return res;
			}
			if (wh == null) {
				errors.append("Không tìm thấy kho trong đơn hàng ID: " + orderId);
				ut.rollback();
				return res;
			}
			// Phân loại sản phẩm chính và khuyến mãi
			List<InvoiceDetailTempDTO> mainProducts = new ArrayList<>();
			List<InvoiceDetailTempDTO> promoProducts = new ArrayList<>();
			for (InvoiceDetailTempDTO dto : invoiceDetailTemps) {
				if (dto.isSpchinh()) {
					mainProducts.add(dto);
				} else {
					promoProducts.add(dto);
				}
			}
			mainProducts.removeIf(dto -> dto.getQuantity() == 0 || dto.getRealQuantity() == 0);

			Set<String> mainProductCodes = mainProducts.stream().map(InvoiceDetailTempDTO::getProductCode)
					.collect(Collectors.toSet());
			promoProducts.removeIf(dto -> !mainProductCodes.contains(dto.getProductDHCode()));

			// Chuẩn bị danh sách chi tiết hóa đơn chính
			List<InvoiceDetail> listInvoiceDetail = new ArrayList<>();
			Map<InvoiceDetailTempDTO, InvoiceDetail> map = new LinkedHashMap<>();

			// Tạo chi tiết hóa đơn chính
			for (InvoiceDetailTempDTO dto : mainProducts) {
				Product pd = productService.selectByCode(dto.getProductCode());
				if (pd == null) {
					errors.append("Không tìm thấy mã sản phẩm: " + dto.getProductCode() + "; ");
					ut.rollback();
					return res;
				}

				double dongia = dto.getUnit_price();
				double thanhtien = MyMath.roundCustom(dto.getRealQuantityDVT() * dongia, 0);

				InvoiceDetail detail = new InvoiceDetail();
				detail.setEx_order(true);
				detail.setProduct(pd);
				detail.setQuantity(dto.getRealQuantityDVT() != 0 ? dto.getRealQuantityDVT() : dto.getQuantity());
				detail.setReal_quantity(
						dto.getRealQuantityDVT() != 0 ? dto.getRealQuantityDVT() : dto.getRealQuantity());
				detail.setUnit_price(dongia);
				detail.setTotal(thanhtien);
				detail.setIdchitietdonhang(dto.getInvoiceDetailId());

				if (detail.getQuantity() != 0) {
					listInvoiceDetail.add(detail);
					map.put(dto, detail);
				}
			}

			// Tạo hóa đơn chính
			Invoice invoice = new Invoice();
			invoice.setOrder_lix(orderLixTrans);
			invoice.setIdorderlix(orderLixTrans.getId());
			invoice.setOrder_code(invoiceTempDTO.getOrderCode());
			invoice.setOrder_voucher(invoiceTempDTO.getOrderVoucher());
			invoice.setCreated_by(orderLixTrans.getCreated_by());
			invoice.setCreated_by_id(orderLixTrans.getCreated_by_id());
			invoice.setCreated_date(new Date());
			invoice.setCustomer(cus);
			invoice.setInvoice_date(now);
			invoice.setDelivery_date(invoiceTempDTO.getDelivery_date());
			invoice.setWarehouse(wh);
			invoice.setTax_value(invoiceTempDTO.getTaxValue());
			invoice.setVoucher_code(invoiceTempDTO.getVoucher_code());
			invoice.setPricing_program(pricingProgram);
			invoice.setPromotion_program(promotionProgram);
			invoice.setPo_no(invoiceTempDTO.getPoNo());
			invoice.setExported(true);
			invoice.setContent_qd(invoiceTempDTO.getContent());
			invoice.setNote(invoiceTempDTO.getNote());
			invoice.setLookup_code(invoiceTempDTO.getLookupCode());
			invoice.setInvoice_code(initInvoiceCode());
			invoice.setDelivery_pricing(orderLixTrans.getDelivery_pricing());
			invoice.setPayment_method(orderLixTrans.getPayment_method());

			String codeiec = "";
			if (orderLixTrans.getIe_categories() != null) {
				if ("1".equals(orderLixTrans.getIe_categories().getCode())) {
					codeiec = "1";
				} else if ("E".equals(orderLixTrans.getIe_categories().getCode())) {
					codeiec = "E";
				} else if ("X".equals(orderLixTrans.getIe_categories().getCode())) {
					codeiec = "X";
				} else if ("-".equals(orderLixTrans.getIe_categories().getCode())) {
					codeiec = "-";
				}
			}
			invoice.setIe_categories(selectIECategoriesByCode(codeiec));

			double totalevent = listInvoiceDetail.stream().mapToDouble(InvoiceDetail::getTotal).sum();
			invoice.setTongtien(MyMath.round(totalevent));
			invoice.setThue(MyMath.round(totalevent * invoice.getTax_value()));
			initCodeVoucher(invoice);

			em.persist(invoice);
			if (invoice.getId() == 0) {
				errors.append("Tạo hóa đơn thất bại!");
				ut.rollback();
				return res;
			}
			listIdResult.add(invoice.getId());

			// Lưu chi tiết hóa đơn chính
			for (InvoiceDetail detail : listInvoiceDetail) {
				detail.setInvoice(invoice);
				detail.setCreated_by("System");
				detail.setCreated_by_id(0L);
				detail.setCreated_date(new Date());
				em.persist(detail);
				if (detail.getId() == 0) {
					errors.append("Tạo chi tiết hóa đơn thất bại!");
					ut.rollback();
					return res;
				}
			}

			// Xử lý hóa đơn khuyến mãi
			if (!promoProducts.isEmpty()) {
				// Tạo hóa đơn khuyến mãi
				Invoice invoicePromo = new Invoice();
				invoicePromo.setIpromotion(true);
				invoicePromo.setOrder_lix(orderLixTrans);
				invoicePromo.setIdorderlix(orderLixTrans.getId());
				invoicePromo.setOrder_code(invoiceTempDTO.getOrderCode());
				invoicePromo.setOrder_voucher(invoiceTempDTO.getOrderVoucher());
				invoicePromo.setCreated_by(orderLixTrans.getCreated_by());
				invoicePromo.setCreated_by_id(orderLixTrans.getCreated_by_id());
				invoicePromo.setCreated_date(new Date());
				invoicePromo.setCustomer(cus);
				invoicePromo.setInvoice_date(now);
				invoicePromo.setDelivery_date(invoiceTempDTO.getDelivery_date());
				invoicePromo.setWarehouse(wh);
				invoicePromo.setTax_value(0);
				invoicePromo.setVoucher_code(invoiceTempDTO.getVoucher_code());
				invoicePromo.setPricing_program(pricingProgram);
				invoicePromo.setPromotion_program(promotionProgram);
				invoicePromo.setPo_no(invoiceTempDTO.getPoNo());
				invoicePromo.setExported(true);
				invoicePromo.setInvoice_own(invoiceService.findByIdSafe(invoice.getId()));
				invoicePromo.setDelivery_pricing(orderLixTrans.getDelivery_pricing());
				invoicePromo.setPayment_method(orderLixTrans.getPayment_method());
				invoicePromo.setCar(orderLixTrans.getCar());
				String codeieckm = "";
				if (orderLixTrans.getIe_categories() != null) {
					if ("1".equals(orderLixTrans.getIe_categories().getCode())) {
						codeieckm = "(";
					} else if ("E".equals(orderLixTrans.getIe_categories().getCode())) {
						codeieckm = "5";
					} else if ("X".equals(orderLixTrans.getIe_categories().getCode())) {
						codeieckm = "A";
					} else if ("-".equals(orderLixTrans.getIe_categories().getCode())) {
						codeieckm = "+";
					}
				}
				invoicePromo.setIe_categories(selectIECategoriesByCode(codeieckm));
				initCodeVoucher(invoicePromo);

				em.persist(invoicePromo);
				if (invoicePromo.getId() == 0) {
					errors.append("Tạo hóa đơn khuyến mãi thất bại!");
					ut.rollback();
					return res;
				}
				listIdResult.add(invoicePromo.getId());

				// Tạo chi tiết hóa đơn khuyến mãi
				double totaleventPromo = 0;
				for (InvoiceDetailTempDTO dto : promoProducts) {
					Product pd = productService.selectByCode(dto.getProductCode());
					if (pd == null) {
						errors.append("Không tìm thấy mã sản phẩm: " + dto.getProductCode() + "; ");
						ut.rollback();
						return res;
					}

					double dongia = dto.getUnit_price();
					double thanhtien = MyMath.roundCustom(dto.getRealQuantityDVT() * dongia, 0);

					InvoiceDetail detail = new InvoiceDetail();
					detail.setEx_order(true);
					detail.setProductdh_code(dto.getProductDHCode());
					detail.setInvoice(invoicePromo);
					detail.setCreated_by(orderLixTrans.getCreated_by());
					detail.setCreated_by_id(orderLixTrans.getCreated_by_id());
					detail.setCreated_date(new Date());
					detail.setProduct(pd);
					detail.setQuantity(dto.getRealQuantityDVT() != 0 ? dto.getRealQuantityDVT() : dto.getQuantity());
					detail.setReal_quantity(
							dto.getRealQuantityDVT() != 0 ? dto.getRealQuantityDVT() : dto.getRealQuantity());
					detail.setUnit_price(dongia);
					detail.setTotal(thanhtien);
					detail.setIdchitietdonhangkm(dto.getInvoiceDetailId());

					// Liên kết với chi tiết hóa đơn chính
					InvoiceDetail invoiceDetailMain = map.get(dto);
					if (invoiceDetailMain != null) {
						detail.setInvoice_detail_own(invoiceDetailMain);
					}

					if (detail.getQuantity() != 0) {
						em.persist(detail);
						if (detail.getId() == 0) {
							errors.append("Tạo chi tiết hóa đơn khuyến mãi thất bại!");
							ut.rollback();
							return res;
						}
						totaleventPromo += thanhtien;
					}
				}

				// C CORRECTION: initInvoiceCode was removed from the previous version, so we
				// need to add it back
				invoicePromo.setInvoice_code(initInvoiceCode());

				// Cập nhật tổng tiền hóa đơn khuyến mãi
				invoiceService.updateTongTienKM(invoicePromo.getId(), MyMath.round(totaleventPromo), "System");
