	public List<Invoice> findInvoicesByCode(String voucherCode, Date fromDate) {
	    try {
	        CriteriaBuilder cb = em.getCriteriaBuilder();
	        CriteriaQuery<Invoice> cq = cb.createQuery(Invoice.class);
	        Root<Invoice> root = cq.from(Invoice.class);

	        // Join fetch các liên kết LAZY
	        root.fetch("customer", JoinType.LEFT);
	        root.fetch("car", JoinType.LEFT);
	        root.fetch("ie_categories", JoinType.LEFT);
	        root.fetch("pricing_program", JoinType.LEFT);
	        root.fetch("promotion_program", JoinType.LEFT);
	        root.fetch("carrier", JoinType.LEFT);
	        root.fetch("delivery_pricing", JoinType.LEFT);
	        root.fetch("contract", JoinType.LEFT);

	        Fetch<Invoice, InvoiceDetail> detailFetch = root.fetch("list_invoice_detail", JoinType.LEFT);
	        detailFetch.fetch("product", JoinType.LEFT);
	        detailFetch.fetch("invoice", JoinType.LEFT);
	        detailFetch.fetch("invoice_detail_own", JoinType.LEFT);

	        // Đổi điều kiện equal -> like (không phân biệt hoa thường)
	        Predicate codeLike = cb.like(
	            cb.lower(root.get("voucher_code")),
	            "%" + voucherCode.toLowerCase() + "%"
	        );

	        Predicate dateFrom = cb.greaterThanOrEqualTo(root.get("invoice_date"), fromDate);

	        cq.select(root).where(cb.and(codeLike, dateFrom)).distinct(true); // distinct tránh trùng do fetch nhiều bảng

	        TypedQuery<Invoice> query = em.createQuery(cq);
	        query.setMaxResults(10); 

	        return query.getResultList();

	    } catch (Exception e) {
	        logger.error("InvoiceAPIService.findInvoicesByCode: " + e.getMessage(), e);
	        return new ArrayList<>();
	    }
	}

