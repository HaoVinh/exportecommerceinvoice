	@Override
	@TransactionAttribute(TransactionAttributeType.SUPPORTS)
	public List<DeliveryPricing> findNotSync() {
		try {
			CriteriaBuilder cb = em.getCriteriaBuilder();
			CriteriaQuery<DeliveryPricing> cq = cb.createQuery(DeliveryPricing.class);
			Root<DeliveryPricing> root = cq.from(DeliveryPricing.class);
			root.fetch("customer", JoinType.LEFT);
			cq.select(root).where(cb.equal(root.get("capnhat"), true));
			TypedQuery<DeliveryPricing> query = em.createQuery(cq);
			return query.getResultList();

		} catch (Exception e) {
			logger.error("DeliveryPricingService.findNotSync:" + e.getMessage(), e);
		}
		return new ArrayList<DeliveryPricing>();
	}

