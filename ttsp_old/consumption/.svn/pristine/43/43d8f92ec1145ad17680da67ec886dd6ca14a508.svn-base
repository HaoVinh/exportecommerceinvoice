	@Override
	@TransactionAttribute(TransactionAttributeType.SUPPORTS)
	public int search(String json, List<DeliveryPricing> list) {
		int res = -1;
		try {/*
			 * { delivery_pricing_info:{customer_id:0,place_code:'',disable:-1},
			 * page:{page_index:0, page_size:0}}
			 */
			JsonObject j = JsonParserUtil.getGson().fromJson(json, JsonObject.class);
			HolderParser hPlaceStr = JsonParserUtil.getValueString(j.get("delivery_pricing_info"), "stextStr", null);
			CriteriaBuilder cb = em.getCriteriaBuilder();
			CriteriaQuery<DeliveryPricing> cq = cb.createQuery(DeliveryPricing.class);
			Root<DeliveryPricing> root_ = cq.from(DeliveryPricing.class);
			root_.fetch("customer", JoinType.LEFT);
			List<Predicate> predicates = new ArrayList<Predicate>();
			List<Predicate> predicatesStr = new ArrayList<Predicate>();
			String stextStr = Objects.toString(hPlaceStr.getValue());
			if (hPlaceStr.getValue() != null && !"".equals(stextStr.trim())) {

				Join<DeliveryPricing, Customer> prod_cus = root_.join("customer", JoinType.LEFT);

				Predicate predicate_code = cb.like(prod_cus.get("customer_code"), "%" + stextStr + "%");
				predicatesStr.add(predicate_code);
				Predicate predicate_name = cb.like(prod_cus.get("customer_name"), "%" + stextStr + "%");
				predicatesStr.add(predicate_name);

				Predicate predicateProdTypecode = cb.like(root_.get("place_code"), "%" + stextStr + "%");
				predicatesStr.add(predicateProdTypecode);
				Predicate predicateProdTypename = cb.like(root_.get("place_arrived"), "%" + stextStr + "%");
				predicatesStr.add(predicateProdTypename);
			}
			if (predicatesStr.size() != 0) {
				cq.select(root_)
						.where(cb.and(predicates.toArray(new Predicate[0])),
								cb.or(predicatesStr.toArray(new Predicate[0])))
						.orderBy(cb.desc(root_.get("place_code")));
			} else {
				cq.select(root_).orderBy(cb.desc(root_.get("place_code")));
			}
			TypedQuery<DeliveryPricing> query = em.createQuery(cq);
			list.addAll(query.getResultList());
			res = 0;
		} catch (Exception e) {
			logger.error("DeliveryPricingService.search:" + e.getMessage(), e);
		}
		return res;
	}

	@Override
	@TransactionAttribute(TransactionAttributeType.SUPPORTS)
	public String initPlaceCode() {
		try {
			CriteriaBuilder cb = em.getCriteriaBuilder();
			CriteriaQuery<Integer> cq = cb.createQuery(Integer.class);
			Root<DeliveryPricing> root = cq.from(DeliveryPricing.class);
			cq.multiselect(cb.coalesce(cb.max(cb.quot((Expression) root.get("place_code"), 1)), 0));
			TypedQuery<Integer> query = em.createQuery(cq);
			int max = query.getSingleResult();
			double p = (double) max / 1000;
			if (p < 1) {
				return String.format("%03d", max + 1);
			}
			return (max + 1) + "";
		} catch (Exception e) {
			logger.error("DeliveryPricingService.initOrderCode:" + e.getMessage(), e);
		}
		return null;
	}

