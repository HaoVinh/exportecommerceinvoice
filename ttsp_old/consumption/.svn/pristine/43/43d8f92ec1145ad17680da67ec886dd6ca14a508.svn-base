				em.persist(p);
				if (p.getId() > 0) {
					res = 0;
				}
			}
		} catch (Exception e) {
			logger.error("DeliveryPricingService.insert:" + e.getMessage(), e);
		}
		return res;
	}

	@Override
	public int update(DeliveryPricingReqInfo t) {
