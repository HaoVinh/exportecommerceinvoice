<?xml version="1.0" encoding="UTF-8"?>
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:p="http://primefaces.org/ui"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:c="http://java.sun.com/jsp/jstl/core"
	xmlns:h="http://java.sun.com/jsf/html" template="/pages/home.xhtml">
	<ui:define name="content">
		<h3
			style="margin: 0px; color: #00145a; font-weight: bold; font-size: 15px !important; line-height: 13px; padding-top: 10px; padding-left: 10px;">Phương
			thức thanh toán</h3>
		<p:separator />
		<div class="col-md-12">
			<h:form id="menuformid">
				<div class="col-md-4">
					<p:panel header="Thông tin" styleClass="panelw100">
						<h:panelGrid id="info">
							<label>Mã phương thức<span style="color: red;">*</span></label>
							<p:inputText
								value="#{paymentMethodBean.paymentMethodCrud.method_code}" />
							<label>Tên phương thức<span style="color: red;">*</span></label>
							<p:inputText
								value="#{paymentMethodBean.paymentMethodCrud.method_name}" />
							<label>HTTT</label>
							<p:inputText
								value="#{paymentMethodBean.paymentMethodCrud.payment}" />
							<label>Mã (cũ)</label>
							<p:inputText
								value="#{paymentMethodBean.paymentMethodCrud.old_code}" />
						</h:panelGrid>
						<p:separator />

						<p:commandLink process="@this,info"
							style="margin-left:5px; padding-left:12px;padding-right:12px;"
							action="#{paymentMethodBean.saveOrUpdate()}"
							styleClass="btn_primmary" update="menuformid:tableid">
							<i class="fa fa-floppy-o" aria-hidden="true"></i>
							<span>Lưu/Cập nhật</span>
						</p:commandLink>
						<p:commandLink process="@this,info"
							style="margin-left:5px; padding-left:12px;padding-right:12px;"
							action="#{paymentMethodBean.createNew()}" styleClass="btn_new"
							update="menuformid:info">
							<i class="fa fa-file-o" aria-hidden="true"></i>
							<span>Tạo mới</span>
						</p:commandLink>
						<p:commandLink process="@this" id="xoact"
							action="#{paymentMethodBean.delete()}"
							style="margin-left:5px; padding-left:12px;padding-right:12px;"
							styleClass="btn_destroy" update=":messages,:menuformid"
							icon="fa fa-trash">
							<p:confirm icon="ui-icon-alert" />
							<i class="fa fa-trash" aria-hidden="true"></i>
							<span>Xóa</span>
						</p:commandLink>

					</p:panel>
				</div>
				<div class="col-md-8">
					<p:panel header="Danh sách" id="preview" styleClass="clearfix">
						<p:commandLink action="#{paymentMethodBean.showDialogUpload()}"
							style="padding:4px !important;" styleClass="btn_upload"
							icon="fa fa-file-excel-o">
							<i class="fa fa-upload" aria-hidden="true"></i>
							<span>Nạp từ excel</span>
						</p:commandLink>
						<p:dataTable value="#{paymentMethodBean.listPaymentMethod}"
							paginatorPosition="bottom" rowsPerPageTemplate="20,40,60"
							paginator="true" rowKey="#{item.id}" styleClass="tablenhapsp"
							style="width:100%"
							selection="#{paymentMethodBean.paymentMethodSelect}"
							scrollable="true" selectionMode="single" scrollWidth=""
							id="tableid" scrollHeight="370" widgetVar="datatb"
							resizableColumns="true" var="item">
							<p:ajax event="rowSelect"
								listener="#{paymentMethodBean.showEdit()}"
								update="menuformid:info" />
							<p:column headerText="ID" width="30">
								<h:outputText value="#{item.id}" />
							</p:column>
							<p:column headerText="Mã" width="50">
								<h:outputText value="#{item.method_code}" />
							</p:column>
							<p:column headerText="Tên phương thức" width="250">
								<h:outputText style="white-space: initial;"
									value="#{item.method_name}" />
							</p:column>
							<p:column headerText="HTTT" width="50">
								<h:outputText value="#{item.payment}" />
							</p:column>
							<p:column headerText="Mã (old)" width="50">
								<h:outputText value="#{item.old_code}" />
							</p:column>
						</p:dataTable>
					</p:panel>
				</div>
			</h:form>
		</div>
		<p:dialog widgetVar="dlgup1" resizable="false"
			styleClass="dislogUpload" header="Tải File">
			<h:form id="dlgup1" enctype="multipart/form-data">
				<p:fileUpload style="text-align:center" id="fileupload"
					dragDropSupport="true" allowTypes="/(\.|\/)(xls|xlsx)$/"
					label="Chọn file từ máy tính" cancelLabel="Huỷ"
					update=":messages,menuformid:tableid" uploadLabel="Tải lên"
					multiple="false" listener="#{paymentMethodBean.loadExcel}"
					mode="advanced" process="@this,dlgup1,menuformid:tableid" />
			</h:form>
		</p:dialog>
	</ui:define>
</ui:composition>