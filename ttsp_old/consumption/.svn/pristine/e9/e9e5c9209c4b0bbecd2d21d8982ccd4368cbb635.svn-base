	@Override
	public int insert(ContractReqInfo t) {
		int res=-1;
		try{
			Contract p=t.getContract();
			if(p !=null){
				if(checkVoucherCode(p.getVoucher_code(), p.getId())==0){
					p.setContract_code(initContractCode());
